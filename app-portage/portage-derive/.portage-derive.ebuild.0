EAPI="5"
CROS_WORKON_LOCALDIR="platform"
CROS_WORKON_LOCALNAME="portage-derive"
CROS_WORKON_COMMIT="0cbce58a888f3babb6fb8180ae0a3f141796d253" # portage-derive-0.1.0

PYTHON_COMPAT=( python{2_5,2_6,2_7} )

inherit distutils-r1 cros-workon

DESCRIPTION="Tool to help keep a derived Portage tree up-to-date"
HOMEPAGE="https://clip-os.org"

LICENSE="LGPL-2.1+"
SLOT="0"
KEYWORDS="x86 amd64"
IUSE="ipython"

DEPEND="
	ipython? ( dev-python/ipython[${PYTHON_USEDEP}] )
	|| (
		sys-apps/portage[${PYTHON_USEDEP}]
		sys-apps/portage-mgorny[${PYTHON_USEDEP}]
	)
"
RDEPEND="${DEPEND}"

python_compile() {
	(cd python && distutils-r1_python_compile)
}

python_install() {
	(cd python && distutils-r1_python_install)
}
